  <span class="m">50%</span> <span class="p">{</span> <span class="nl">transform</span><span class="p">:</span> <span class="nf">translate</span><span class="p">(</span><span class="m">5px</span><span class="p">,</span> <span class="m">-5px</span><span class="p">)</span> <span class="nf">rotate</span><span class="p">(</span><span class="m">180deg</span><span class="p">);</span> <span class="p">}</span>
